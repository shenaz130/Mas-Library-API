<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".tv_series_row_items"
    android:background="#B1E676">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_library_books_black_24dp"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:layout_rowSpan="3"
        android:layout_row="0"
        android:layout_column="0"/>

    <TextView
        android:id="@+id/tvbookNameV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginStart="5dp"
        android:padding="5dp"
        android:text="N/A"
        android:textColor="#000000"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvbookAuthorV"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginStart="5dp"
        android:padding="2dp"
        android:text="N/A"
        android:textColor="#000000"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvbookRatingV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginStart="5dp"
        android:padding="2dp"
        android:text="N/A"
        android:textColor="#000000"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvbookDesV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginStart="5dp"
        android:padding="2dp"
        android:text="N/A"
        android:textColor="#000000"
        android:textSize="16dp" />



</GridLayout>